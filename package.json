{
  "name": "cashly",
  "description": "A family finance management application built with Next.js and deployed on Vercel.",
  "version": "1.13.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint-fix": "eslint --fix --ext .ts,.tsx .",
    "ci:publish": "pnpm publish -r",
